<Window x:Class="WPFTextGUI.Webcheck.WebControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTextGUI.Webcheck"
        mc:Ignorable="d"
        Title="WebControlWindow" Height="200" Width="400">
    <Grid Margin="0,0,0,0">
        <TextBox x:Name="txtUrl" Margin="50,69,50,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
        <TextBox x:Name="txtTerm" Margin="50,89,50,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
        <Button Click="btnStart_Click" x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="50,116,0,0" VerticalAlignment="Top" Width="42"/>
        <Button Click="btnStop_Click" x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="102,116,0,0" VerticalAlignment="Top" Width="43"/>
